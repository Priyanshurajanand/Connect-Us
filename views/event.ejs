<main class="content">
    <div class="main-header">
      <div class="main-title">
        <h1>Time slot for interview </h1>
      </div>
      <div class="main-form">
        <form  method="POST" action="/dashboard">
          <input name="username" type="text" id="username" value="<%= user.username %>">
          <input type="text" name="ftitle" id="ftitle" placeholder="Add title">
          <input type="text" name="fdescription" id="fdescription" placeholder="Add description">


          <div class="input-group">
            <input type="date" name="fdate" id="fdate" min="1997-01-01" max="2030-12-31" placeholder="dd-mm-yyyy" value="">
            
          </div>

          <div class="input-hour">
            <div id="fhourdiv">
              <input type="time" id="fstart" name="fstart" class="hour">
              <input type="time" id="fend" class="hour" name="fend" >
            </div>
          </div>

          <button type="submit" class="button" id="fsubmit"> Save</button>
        </form>
      </div>
    </div>
  </main>

